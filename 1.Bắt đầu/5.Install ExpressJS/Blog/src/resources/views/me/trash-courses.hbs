<div class="mt-4 container">
    <div class="d-flex justify-content-between align-items-center">
        <h3>Khóa học đã xóa</h3>
        <a href="/me/stored/courses" class="btn btn-secondary">Danh sách khóa học</a>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian xóa</th>
                <th scope="col" colspan="2">Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{ sum @index 1 }}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.deletedAt}}</td>
                <td>
                    <a href="#" class="btn btn-primary btn-restore" data-id="{{this._id}}">Khôi phục</a>
                </td>
                <td>
                    <button class="btn btn-danger" 
                            data-bs-toggle="modal" 
                            data-bs-target="#delete-course-modal"
                            data-id="{{this._id}}">
                        Xóa vĩnh viễn 
                    </button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="6" class="text-center text-muted py-3">
                    <i class="fas fa-exclamation-circle"></i> Thùng rác trống 
                    <a href="/me/stored/courses">Danh sách khóa học</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal xác nhận xóa -->
<div id="delete-course-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Hành động không thể khôi phục bạn vẫn muốn xóa vĩnh viễn</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="confirm-delete-course" class="btn btn-danger">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<!-- Form xóa ẩn -->
<form name="delete-course-form" method="POST">
    <input type="hidden" name="_method" value="DELETE">
</form>

<!-- Form khôi phục ẩn -->
<form name="restore-course-form" method="POST">
    <input type="hidden" name="_method" value="PATCH">
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var courseId;
        var deleteForm = document.forms['delete-course-form'];
        var restoreForm = document.forms['restore-course-form'];

        // Xử lý xóa khóa học
        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');  // Lấy ID khóa học cần xóa
        });

        document.getElementById('confirm-delete-course').onclick = function () {
            if (courseId) {
                deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
                deleteForm.submit();
            }
        };

        // Xử lý khôi phục khóa học
        $('.btn-restore').each(function () {
            $(this).click(function (e) {
                e.preventDefault();
                var courseId = $(this).data('id');
                restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
                restoreForm.submit();
            });
        });
    });
</script>
